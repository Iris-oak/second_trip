<%= search_form_for @q do |f| %>
  <%= f.label :name, "Keyword" %>
  <%= f.search_field :name_cont %>

  <%= f.submit "検索" %>
<% end %>


<form method="post" name="f" action="./sub.cgi" target="hoge_iframe">
<input type="hidden" name="arg" value="" />
</form>

<table class="table table-striped table-bordered">
<tr>
  <th><%= sort_link(@q, :name, "Name") %></th>
  <th><%= sort_link(@q, :city, "City") %></th>
  <th><%= sort_link(@q, :address, "Address") %></th>
  <th>すでに行った</th>
  <th colspan="2"></th>
</tr>
<% @attractions.each do |attraction| %>
<tr>
  <td><%= attraction.name %></td>
  <td><%= attraction.city %></td>
  <td><%= attraction.address %></td>
  <td>
  
  <% if current_user.visited?(attraction) %>
    <%= render 'unvisited', { attraction: attraction } %>
  <% else %>
    <%= render 'visited', { attraction: attraction } %>
  <% end %>
  </td>
</tr>
<% end %>
</table>

