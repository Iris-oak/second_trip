<%= search_form_for @q do |f| %>
  <%= f.label :name, "Keyword" %>
  <%= f.search_field :name_cont %>

  <%= f.submit "検索" %>
<% end %>


<form method="post" name="f" action="./sub.cgi" target="hoge_iframe">
<input type="hidden" name="arg" value="" />
</form>

<table class="table table-striped table-bordered">
<tr>
  <th><%= sort_link(@q, :name, "Name") %></th>
  <th><%= sort_link(@q, :city, "City") %></th>
  <th><%= sort_link(@q, :address, "Address") %></th>
  <th colspan="3"></th>
</tr>
<% @attractions.each do |attraction| %>
<tr>
  <tr>
    <%= form_tag("move")do %>
        <%= attraction.id %>
        <%= button_to 'Button'%>
    <% end %>
  </tr>
  <td><%= link_to '登録', post, "detail-" + attraction.id.to_s>
  <td><%= attraction.name %></td>
  <td><%= attraction.city %></td>
  <td><%= attraction.address %></td>
  <td><%= attraction.id %></td>
</tr>
<% end %>
</table>

<iframe src="./sub.cgi" name="hoge_iframe" id="hoge_iframe">あいふれーむ</iframe>

