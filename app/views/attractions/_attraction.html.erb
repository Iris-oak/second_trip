
<div class="col-sm-12 col-lg-4 mb-3">
  <div id="attraction-id-<%= attraction.id %>">
       <div class="card">

           <div class="card-body">
                <h4 class="card-title">
                  <%= attraction.name %>
                </h4>
                <% if current_user.own?(attraction) %>
                 <%= render 'crud_menus', attraction: attraction %>
                <% end %>
                <ul class="list-inline">
                  <li class="list-inline-item">
                    <%= icon 'far', 'user' %>
                    <%= attraction.name %>
                  </li>
                  <li class="list-inline-item">
                    <%= icon 'far', 'calendar' %>
                    <%= l attraction.city, format: :long %>
                  </li>
                </ul>
              <p class="card-text"><%= attraction.address %></p>
           </div>
       </div>
   </div>
</div>